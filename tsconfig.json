{
	"include": [
		"src/**/*.*"
	],
	"compilerOptions": {
		"strict": true,
		"target": "es2017",
		"module": "esnext",
		"moduleResolution": "Node",
		"lib": [
			"DOM",
			"es2017"
		],
		"alwaysStrict": true,
		"removeComments": true,
		"listEmittedFiles": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	}
}