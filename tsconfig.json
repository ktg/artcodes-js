{
	"include": [
		"src/**/*.*"
	],
	"compilerOptions": {
		"strict": true,
		"target": "es2017",
		"module": "esnext",
		"moduleResolution": "Node",
		"lib": [
			"DOM",
			"es5",
			"es2015",
			"es2016",
			"es2017",
			"es2018",
			"es2019",
			"es2020",
			"esnext"
		],
		"alwaysStrict": true,
		"removeComments": true,
		"listEmittedFiles": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	}
}